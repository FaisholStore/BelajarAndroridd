<!-- fragment_result.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:padding="16dp"
   tools:context=".ResultFragment">

   <TextView
      android:id="@+id/additionResultTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hasil Pertambahan:"
      android:textSize="18sp"
      android:textStyle="bold" />

   <TextView
      android:id="@+id/subtractionResultTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hasil Pengurangan:"
      android:textSize="18sp"
      android:textStyle="bold" />

   <TextView
      android:id="@+id/multiplicationResultTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Hasil Perkalian:"
      android:textSize="18sp"
      android:textStyle="bold" />



</LinearLayout>
